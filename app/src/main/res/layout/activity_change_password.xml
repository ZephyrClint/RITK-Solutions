<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".change_password">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161"
        app:srcCompat="@drawable/group_10" />

    <EditText
        android:id="@+id/changePassword_current"
        android:layout_width="249dp"
        android:layout_height="63dp"
        android:background="@color/white"
        android:backgroundTint="#D7D1D1"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/change_current_password_hint"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView12"
        app:layout_constraintStart_toStartOf="@+id/imageView12"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        app:layout_constraintVertical_bias="0.19" />

    <EditText
        android:id="@+id/changePassword_new"
        android:layout_width="249dp"
        android:layout_height="63dp"
        android:background="@color/white"
        android:backgroundTint="#D7D1D1"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/change_new_password_hint"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/changePassword_current"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/changePassword_current"
        app:layout_constraintTop_toBottomOf="@+id/changePassword_current"
        app:layout_constraintVertical_bias="0.167" />

    <Button
        android:id="@+id/changePasswordSaveBtn"
        android:layout_width="165dp"
        android:layout_height="66dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Change Password"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/changePassword_new"
        app:layout_constraintStart_toStartOf="@+id/changePassword_new"
        app:layout_constraintTop_toBottomOf="@+id/changePassword_new" />

</androidx.constraintlayout.widget.ConstraintLayout>