<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/e_txt_dt_1"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="@string/e_txt_dt_1"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/e_txt_tm_1"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/e_txt_tm_1"
        android:inputType="time"
        app:layout_constraintBaseline_toBaselineOf="@+id/e_txt_dt_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/e_txt_dt_1" />

    <EditText
        android:id="@+id/e_txt_num_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="165dp"
        android:ems="10"
        android:hint="@string/e_txt_num_1"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_txt_dt_1" />

    <EditText
        android:id="@+id/e_txt_addr_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="@string/e_txt_addr_1"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_txt_num_1" />

    <Button
        android:id="@+id/btn_appetizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:width="150dp"
        android:onClick="openThird"
        android:text="@string/btn_appetizer"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:backgroundTint="#FFC107"
        app:layout_constraintEnd_toStartOf="@+id/btn_mainCourse"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu" />

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="134dp"
        android:layout_height="37dp"
        android:layout_marginTop="120dp"
        android:background="#673AB7"
        android:text="@string/tv_menu"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textColorHint="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_txt_addr_1" />

    <Button
        android:id="@+id/btn_mainCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:width="150dp"
        android:onClick="openFourth"
        android:text="@string/btn_mainCourse"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:backgroundTint="#FFC107"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_appetizer"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_dessert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:width="150dp"
        android:insetLeft="0dp"
        android:onClick="openFifth"
        android:text="@string/btn_dessert"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:backgroundTint="#FFC107"
        app:layout_constraintEnd_toStartOf="@+id/btn_other"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_appetizer" />

    <Button
        android:id="@+id/btn_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:width="150dp"
        android:onClick="openSixth"
        android:text="@string/btn_other"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:backgroundTint="#FFC107"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_dessert"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_viewSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:onClick="openSecond"
        android:text="@string/btn_viewSelected"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dessert" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="416dp"
        android:layout_height="142dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottom_design" />

    <Button
        android:id="@+id/btn_view_initial_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="282dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="1dp"
        android:onClick="viewAll"
        android:text="@string/btn_view_initial_details"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_other" />

    <Button
        android:id="@+id/btn_confirm_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="32dp"
        android:onClick="saveCaterOrder"
        android:text="@string/btn_confirm"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_txt_addr_1" />

    <Button
        android:id="@+id/btn_discard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="37dp"
        android:onClick="deleteInitialOrderDetails"
        android:text="@string/btn_discard"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_confirm_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_update" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:onClick="updateInitialOrderDetails"
        android:text="@string/update_button"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_confirm_1"
        app:layout_constraintStart_toEndOf="@+id/btn_confirm_1" />


</androidx.constraintlayout.widget.ConstraintLayout>