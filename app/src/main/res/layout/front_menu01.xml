<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/fouthCardView"
        android:layout_width="380dp"
        android:layout_height="374dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="357dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <ViewFlipper
            android:id="@+id/v_flipper"
            android:layout_width="382dp"
            android:layout_height="384dp"
            android:layout_centerHorizontal="true"></ViewFlipper>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/orderButtonView"
        android:layout_width="151dp"
        android:layout_height="113dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="232dp"
        android:layout_marginLeft="232dp"
        android:layout_marginBottom="214dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/orderButtonImg"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:clickable="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ordermenue001" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="148dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Lets eat!"
            android:textColor="#202020"
            android:shadowColor="#FFC61C"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="1.6"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cateringButton001"
        android:layout_width="151dp"
        android:layout_height="111dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="231dp"
        android:layout_marginLeft="231dp"
        android:layout_marginBottom="74dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/cateringButtonImg"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:clickable="true"

            android:scaleType="fitXY"
            app:srcCompat="@drawable/catering001" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="126dp"
            android:layout_height="72dp"
            android:text="Catering Services"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowColor="#FFC61C"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="1.6"

            android:textColor="#202020"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tableReservationButton001"
        android:layout_width="152dp"
        android:layout_height="112dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="73dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/reservationButtonImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:scaleType="fitXY"

            app:srcCompat="@drawable/reservation" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="148dp"
            android:layout_height="71dp"
            android:text="Table Reservation"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:shadowColor="#FFC61C"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="1.6"
            android:textColor="#202020"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/userButton001"
        android:layout_width="153dp"
        android:layout_height="114dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="214dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/userButtonImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/userbutton001" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="148dp"
            android:layout_height="71dp"
            android:text="Your Account"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowColor="#FFC61C"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="1.6"
            android:textColor="#202020"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>